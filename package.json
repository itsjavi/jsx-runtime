{
  "name": "@itsjavi/jsx-runtime",
  "amdName": "jsxrt",
  "version": "0.2.0",
  "description": "Extremely lightweight JSX runtime for TypeScript and JavaScript. Write JSX without React!",
  "author": "Javi Aguilar",
  "license": "MIT",
  "homepage": "https://github.com/itsjavi/jsx-runtime#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/itsjavi/jsx-runtime.git"
  },
  "bugs": {
    "url": "https://github.com/itsjavi/jsx-runtime/issues"
  },
  "keywords": [
    "react",
    "jsx",
    "jsx-runtime",
    "jsx-renderer",
    "tsx",
    "tsx-runtime",
    "tsx-renderer"
  ],
  "main": "./dist/jsx-runtime.js",
  "module": "./dist/jsx-runtime.module.js",
  "esmodule": "./dist/jsx-runtime.modern.js",
  "exports": "./dist/jsx-runtime.modern.js",
  "umd:main": "./dist/jsx-runtime.umd.js",
  "source": "src/jsx-runtime/index.ts",
  "types": "src/jsx-runtime/index.d.ts",
  "files": [
    "src",
    "dist",
    "!**/*.html",
    "!**/*.spec.*",
    "!**/*.test.*",
    "!**/*.json",
    "!**/*.yml",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "dev": "microbundle watch",
    "test": "jest --verbose --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --runInBand --ci --coverage --coverageDirectory=coverage",
    "build:prod": "cross-env NODE_ENV=production microbundle --tsconfig ./tsconfig.json  --format modern,cjs,umd  --output dist/prod/index.js",
    "build:dev": "cross-env NODE_ENV=development microbundle --define process.env.NODE_ENV=development --tsconfig ./tsconfig.json --generateTypes false --format modern --output dist/dev/index.js",
    "build": "rm -rf ./dist && pnpm build:dev && pnpm build:prod"
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.19.6",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/preset-env": "^7.19.4",
    "@babel/preset-typescript": "^7.18.6",
    "@babel/register": "^7.18.9",
    "cross-env": "^7.0.3",
    "jest": "^29.2.2",
    "jsdom": "^20.0.2",
    "microbundle": "^0.15.1",
    "typescript": "^4.8.4"
  },
  "browserslist": [
    "defaults",
    "not IE 11"
  ]
}
